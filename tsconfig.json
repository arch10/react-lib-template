{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/__mocks__",
    "src/**/*.stories.tsx", 
    "src/**/*.stories.mdx",
    "src/**/*.test.tsx",
    "src/**/*.test.ts"
  ]
}